# Backend Environment Variables

# Server
PORT=5000
NODE_ENV=production

# Database (for cPanel, usually provided by hosting)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=your_cpanel_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_cpanel_db_name

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production_use_random_string
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS) - use * for any origin or your domain
FRONTEND_URL=*
